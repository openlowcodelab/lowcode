<Carousel>
    <CarouselSlick>
        <div>
            应用模板
        </div>
    </CarouselSlick>
    <CarouselSlick>
        <div>
            组件库
        </div>
    </CarouselSlick>
    <CarouselSlick>
        <div>
            主题模板
        </div>
    </CarouselSlick>
    <CarouselSlick>
        <div>
