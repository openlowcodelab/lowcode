@namespace H.LowCode.Themes.AntBlazor
@inherits RenderEngineLowCodeComponentBase

<div class="renderengine-componentcontainer" style="@ContainerComponent.Style.DefaultStyle">
    @if (ContainerComponent.Childrens != null)
    {
        foreach (var comp in ContainerComponent.Childrens)
        {
            <div style="min-height: @(comp.Style.ItemHeight)px;
                width: @((comp.Style.ItemWidth ?? 24)  /24 * 100)%;
                @comp.Style.DefaultStyle @comp.Style.CustomStyle">
                <FormComponentRender Component="@comp"></FormComponentRender>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public ComponentSchema ContainerComponent { get; set; }

    protected override async Task OnInitializedAsync()
    {

        await base.OnInitializedAsync();
    }
}