@inject DragDropService DragDropService

@foreach(var item in DragItems)
{
    <DragItem DragDropModel="item" OnItemDragStart="OnItemDragStart"></DragItem>
}

@code {
    internal List<DragDropModel> DragItems = new List<DragDropModel>()
        {
            new DragDropModel(){
                ComponentJSchema = new JSchema(){ Title = "用户选择" },
                ComponentType = "userselect",
                DropRenderFragment = (builder) => {
                    builder.OpenComponent(0, typeof(Input<string>));
                    builder.CloseComponent();
                }
            },
            new DragDropModel(){
                ComponentJSchema = new JSchema(){ Title = "行政区划" },
                ComponentType = "region",
                DropRenderFragment = (builder) => {
                    builder.OpenComponent(0, typeof(Input<string>));
                    builder.CloseComponent();
                }
            },
            new DragDropModel(){
                ComponentJSchema = new JSchema(){ Title = "地图" },
                ComponentType = "map",
                DropRenderFragment = (builder) => {
                    builder.OpenComponent(0, typeof(Input<string>));
                    builder.CloseComponent();
                }
            }
        };

    public void OnItemDragStart(DragDropModel model)
    {
        DragDropService.CurrentDragModel = model;
    }
}
