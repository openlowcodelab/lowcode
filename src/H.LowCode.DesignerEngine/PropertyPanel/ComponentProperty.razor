@if (DragDropItem != null)
{
    <label>ID <span style="font-size:10px; color:gray;">(字段名称/英文)</span>：</label>
    <Input TValue="string" @bind-Value="@DragDropItem.Name" />
    <label>标题：</label>
    <Input TValue="string" @bind-Value="@DragDropItem.Title" />
    <label>默认值：</label>
    <Input TValue="string" @bind-Value="@Model.DefaultValue" />
    <label>必填：</label>
    <Checkbox @bind-Value="@Model.IsRequired" />
}

@code {
    [Parameter]
    public DragDropItem DragDropItem { get; set; }

    [Parameter]
    public ComponentPropertyBaseModel Model { get; set; }
}
