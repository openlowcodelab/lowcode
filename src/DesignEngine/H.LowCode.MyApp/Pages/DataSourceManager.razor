@page "/myapp/{AppId}/datasource"
@namespace H.LowCode.MyApp
@layout MyAppLayout

<PageTitle>数据源管理</PageTitle>

<Tabs DefaultActiveKey="tab_datasource_table" Animated>
    <TabPane Tab="数据表" Key="tab_datasource_table">
        <TableDataSource AppId="@AppId"></TableDataSource>
    </TabPane>

    <TabPane Tab="API" Key="tab_datasource_api">
        <APIDataSource AppId="@AppId"></APIDataSource>
    </TabPane>

    <TabPane Tab="选项" Key="tab_datasource_option">
        <OptionDataSource AppId="@AppId"></OptionDataSource>
    </TabPane>
</Tabs>

@code {
    [Parameter]
    public string AppId { get; set; }
}