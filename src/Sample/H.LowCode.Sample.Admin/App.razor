<Router AppAssembly="@typeof(MainLayout).Assembly" AdditionalAssemblies="@Assemblies" PreferExactMatches="@true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@DefaultLayout" />
    </Found>
    <NotFound>
        <LayoutView Layout="@DefaultLayout">
            <p>404£ºSorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code
{
    private Assembly[] Assemblies = new Assembly[]
    {
        typeof(MainLayout).Assembly,
        typeof(H.LowCode.DesignEngine.Shared.DesignerLayout).Assembly
    };

    private Type DefaultLayout = typeof(MainLayout);
}